# MongoDB Configuration
# Connection string for MongoDB database
# Format: mongodb://[username]:[password]@[host]:[port]/[database]
MONGODB_URI=mongodb://admin:admin@localhost:27017/appdb

# Keycloak Authentication
# Client ID from your Keycloak application settings
KEYCLOAK_CLIENT_ID=your_client_id
# Client Secret from your Keycloak application settings
KEYCLOAK_CLIENT_SECRET=your_client_secret
# URL to your Keycloak realm
# Format: http://[keycloak-host]:[port]/realms/[realm-name]
KEYCLOAK_ISSUER=http://localhost:8080/realms/your_realm

# NextAuth Configuration
# Secret key for NextAuth session encryption
# Generate using: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret
# URL where your application is running
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL=http://localhost:3000
